<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>*.xhtml</url-pattern>
    </servlet-mapping>
    
    <factory>
        <exception-handler-factory>
            Exceptions.CustomExceptionHandlerFactory
        </exception-handler-factory>
    </factory>
    <navigation-rule>   
        <navigation-case>
            <from-outcome>AdminUsr</from-outcome>
            <to-view-id>/admin_usuarios.xhtml</to-view-id>
        </navigation-case>
    
        <navigation-case>
            <from-outcome>ClienteLoggedIn</from-outcome>
            <to-view-id>main.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>logout</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>EditUsr</from-outcome>
            <to-view-id>/info_usuario.xhtml</to-view-id>
        </navigation-case>  
        
        <navigation-case>
            <from-outcome>compras</from-outcome>
            <to-view-id>/compras.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>detalles</from-outcome>
            <to-view-id>/detalles_de_compra.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>EditProd</from-outcome>
            <to-view-id>/info_producto.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>productos</from-outcome>
            <to-view-id>/admin_productos.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>procesados</from-outcome>
            <to-view-id>/pedidos_procesados.xhtml</to-view-id>
        </navigation-case>
        
        <navigation-case>
            <from-outcome>piqueo</from-outcome>
            <to-view-id>/orden_piqueo.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>  
    
    <managed-bean>
        <managed-bean-name>usr0</managed-bean-name>
        <managed-bean-class>Modelo.Cliente</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean> 
 
</faces-config>
